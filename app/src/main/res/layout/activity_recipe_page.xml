<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.RecipePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_card_large"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/card_view"
                app:cardCornerRadius="@dimen/card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_card_large"
                            android:text="ID: "
                            android:textColor="@color/text_color_tertiary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/zero_padding"
                            android:textColor="@color/text_color_tertiary"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="###"
                            android:textColor="@color/text_color_tertiary"
                            android:textSize="@dimen/text_small" />

                        <ImageView
                            android:layout_width="@dimen/drawable_star_size"
                            android:layout_height="@dimen/drawable_star_size"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_star" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="323dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_card_large"
                        android:background="@color/card_view"
                        android:text="Recipe Title"
                        android:textAlignment="center"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_card_large"
                            android:background="@color/card_view"
                            android:text="Yield:"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_medium" />

                        <TextView
                            android:id="@+id/r_yield"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_card_large"
                            android:background="@color/card_view"
                            android:text="# of servings"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_card_large"
                            android:background="@color/card_view"
                            android:text="Prep time:"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_medium" />

                        <TextView
                            android:id="@+id/prep_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_card_large"
                            android:background="@color/card_view"
                            android:text="# mins"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_card_large"
                            android:background="@color/card_view"
                            android:text="Total time:"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_medium" />

                        <TextView
                            android:id="@+id/total_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_card_large"
                            android:layout_marginBottom="@dimen/margin_card_large"
                            android:background="@color/card_view"
                            android:text="# mins"
                            android:textAlignment="textStart"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_card_large"
                        android:background="@color/card_view"
                        android:text="Ingredients:"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/ingredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_card_large"
                        android:background="@color/card_view"
                        android:text="1 ingredient "
                        android:textAlignment="textStart"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_card_large"
                        android:layout_marginTop="@dimen/margin_card_large"
                        android:background="@color/card_view"
                        android:text="Directions:"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/directions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_card_large"
                        android:layout_marginBottom="@dimen/margin_card_large"
                        android:background="@color/card_view"
                        android:text="@string/lorem_ipsum_short"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/text_medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_cancel"
                    android:text="delete"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_reset"
                    android:text="edit"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/btn_primary"
                    android:text="home"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>